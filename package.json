{
  "name": "vue-template",
  "description": "A Vue.js project",
  "author": "Ara Yapejian <ayapejian@hapinnovations.com>",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others 'npm run dev:client' 'npm run dev:server'",
    "dev:client": "webpack-dev-server --inline --hot --port 3000",
    "dev:server": "nodemon -i client --exec babel-node server/index.js",
    "build": "npm run build:client &&build:server",
    "build:client": "cross-env NODE_ENV=production webpack --progress --hide-modules",
    "build:server": "NODE_ENV=production",
    "test:server": "NODE_ENV=test lab -e test -T server/test/test-transforms.js server/test/"
  },
  "dependencies": {
    "blipp": "^2.3.0",
    "boom": "^3.2.2",
    "hapi": "^13.5.0",
    "joi": "^9.0.4",
    "mdi": "^1.6.50",
    "picnic": "^6.1.2",
    "purecss": "^0.6.0",
    "vue": "^2.0.0-beta.5",
    "vue-resource": "^0.9.3",
    "vue-router": "^2.0.0-beta.1",
    "vuex": "^1.0.0-rc.2"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.0.0",
    "concurrently": "^2.2.0",
    "cross-env": "^1.0.6",
    "css-loader": "^0.23.1",
    "file-loader": "^0.9.0",
    "html-webpack-plugin": "^2.22.0",
    "node-sass": "^3.8.0",
    "postcss": "^5.1.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.9.1",
    "postcss-reporter": "^1.4.1",
    "postcss-url": "^5.1.2",
    "sass-loader": "^4.0.0",
    "tape": "^4.6.0",
    "url-loader": "^0.5.7",
    "vue-loader": "^9.0.0",
    "vue-style-loader": "^1.0.0",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.12.0"
  }
}
